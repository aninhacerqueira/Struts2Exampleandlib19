<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
	<package name="default" extends="hibernate-default">
	<!-- User model -->
		<action name="saveOrUpdateUser" method="saveOrUpdate" class="br.com.struts.web.UserAction">
			<result name="success" type="redirect">listUser</result>
		</action>
		<action name="listUser" method="list" class="br.com.struts.web.UserAction">
			<result name="success">/register.jsp</result>
		</action>
		<action name="editUser" method="edit" class="br.com.struts.web.UserAction">
			<result name="success">/register.jsp</result>
		</action>
		<action name="deleteUser" method="delete" class="br.com.struts.web.UserAction">
			<result name="success" type="redirect">listUser</result>
		</action>
		
		<!-- Contact model -->
		<action name="saveOrUpdateContact" method="saveOrUpdate" class="br.com.struts.web.ContactAction">
			<result name="success" type="redirect">listContact</result>
		</action>
		<action name="listContact" method="list" class="br.com.struts.web.ContactAction">
			<result name="success">/contact.jsp</result>
		</action>
		<action name="editContact" method="edit" class="br.com.struts.web.ContactAction">
			<result name="success">/contact.jsp</result>
		</action>
		<action name="deleteContact" method="delete" class="br.com.struts.web.ContactAction">
			<result name="success" type="redirect">listContact</result>
		</action>
		
		<!-- Contact Type -->
		<action name="saveOrUpdateContactType" method="saveOrUpdate" class="br.com.struts.web.ContactAction">
			<result name="success" type="redirect">listContactType</result>
		</action>
		<action name="listContactType" method="listType" class="br.com.struts.web.ContactAction">
			<result name="success">/contact.jsp</result>
		</action>
		<action name="editContactType" method="edit" class="br.com.struts.web.ContactAction">
			<result name="success">/contact.jsp</result>
		</action>
		<action name="deleteContactType" method="delete" class="br.com.struts.web.ContactAction">
			<result name="success" type="redirect">listContactType</result>
		</action>
		
		<!-- Cep model -->
		<action name="searchCEP" method="searchCEP" class="br.com.struts.web.UserAction">
			<result name="SUCESS"/>
		</action>
	</package>
</struts>